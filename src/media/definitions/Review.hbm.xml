<hibernate-mapping package="media.definitions">
	<class table="V_Review" name="Review">
		<!-- <id column="Benutzer" name="username" type="string">
			<generator class="native" />
		</id> -->
		<composite-id>
		    <key-property name="username" column="Benutzer" type="string" />
